<%- include ("../partials/header.ejs") %>
    <!--Gestion des messages d'erreur-->
    <% if (typeof message_negatif !=='undefined' ) { %>
        <div class="custom-message-negatif" id="message_negatif">
            <%= message_negatif %>
        </div>
        <% } %>
            <!--Gestion de l'affichage de l'Ã©tat de connexion de l'utilisateur-->
            <% if (typeof message_positif !=='undefined' ) { %>
                <div class="custom-message-positif" id="message_positif">
