<%- include ("../partials/header.ejs") %>

    <script>
        var nomPage = " | Explorer";
        document.title += nomPage;
    </script>

    <div id="carousel" class="carousel slide">
        <div class="carousel-inner">
            <% items.forEach(function(item) { %>
                <div class="carousel-item <%= item.ID_PLANETE === 1 ? 'active' : '' %> w-100">
                    <div class="container-fluid text-center" style="margin-top: 20px;">
                        <br>
                        <div class="row">
                            <div class="col">
                                <div class="row" style="margin: 4% 9% 4% 9%;">
                                    <div class="col-sm-6">
                                        <h2 class="custom-font-planet-t">
                                            <%= item.NOM %>
                                        </h2>
                                    </div>
                                    <div class="col-sm-6 mt-4 custom-font-planet-p" style="text-align: right;">
                                        <div class="row-sm-4">
                                            <h6>Type d'objet céleste : <%= item.TYPE %>
                                            </h6>
                                        </div>
                                        <div class="row-sm-4">
                                            <h6>Gravité : <%= item.GRAVITE %> m/s²</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-black d-flex p-2 " style="margin: 4% 9% 5% 9%;">
                                    <h5 class="custom-font-planet-p" style="text-align: justify;">
                                        <%= item.DESCRIPTION %>
                                    </h5>
                                </div>
                                <a href="/<%= item.ID_PLANETE %>"
                                    class="btn btn-outline-light btn-lg custom-font-planet-p">Chercher un voyage</a>
                            </div>
                            <div class="col">
                                <div class="text-center">
                                    <img src="/images/<%= item.IMAGE %>" class="image-fluid m-2"
                                        style="border-radius: 48%; width: 550px; height: 455px;" alt="Jupiter">
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>
                </div>
                <% }); %>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev"
                        style="margin-top: 420px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                            class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                            <path
                                d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"
                                aria-hidden="true" />
                        </svg>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next"
                        style="margin-top: 420px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                            class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                            <path
                                d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"
                                aria-hidden="true" />
                        </svg>
                    </button>
        </div>
    </div>

    <%- include ("../partials/footer.ejs") %>